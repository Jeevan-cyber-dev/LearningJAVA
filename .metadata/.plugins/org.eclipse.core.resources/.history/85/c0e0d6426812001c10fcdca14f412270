package JavaPATTERN;

import java.util.Scanner;

public class Pattern5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int number=1;
		Scanner sc=new Scanner(System.in);
		int n=(sc.nextInt())/2;
		for(int i=0;i<=2*(n);i++) {
			for(int j=1;j<=n-i;j++) {
				System.out.print(" ");
			}
			for(int j=0;j<=i;j++) {
				System.out.print(number++ +" ");
			}
			System.out.println();
	}

}
}
